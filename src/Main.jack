class Main {
    static int coins;

    function void main(){
        do StartScreen.chooseDifficulty();
        while (true){
            do StartScreen.initializeMenu(coins);
        }
        return;
    }

    function int getCoins(){
        return coins;
    }

    function void setCoins(int value){
        let coins = value;
        return;
    }

    function void updateCoins(){
        do Output.moveCursor(2, 55);
        do Output.printInt(coins);
        return;
    }
}